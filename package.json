{
  "name": "timer",
  "version": "0.0.1",
  "description": "",
  "author": "bre97-web",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bre97-web/timer.git"
  },
  "bugs": {
    "url": "https://github.com/bre97-web/timer/issues"
  },
  "homepage": "https://bre97-web.github.io/timer/",
  "scripts": {
    "type-check": "wireit",
    "dev": "wireit",
    "dev:src": "wireit",
    "build": "wireit",
    "build:src": "wireit",
    "preview": "wireit",
    "preview:src": "wireit",
    "format:json": "npx prettier --write package.json",
    "format:ts": "tsc --pretty",
    "publish-to-firebase": "node ./scripts/publish-to-firebase.js",
    "publish-to-github": "node ./scripts/publish-to-github.js",
    "test": "exit 0"
  },
  "type": "module",
  "files": [],
  "workspaces": [],
  "dependencies": {
    "@fontsource/roboto": "^5.0.8",
    "@headlessui/vue": "^1.7.16",
    "@material/web": "^1.0.0-pre.17",
    "autoprefixer": "^10.4.15",
    "lit": "^2.8.0",
    "material-symbols": "^0.12.0",
    "moment": "^2.29.4",
    "pinia": "^2.1.6",
    "pinia-plugin-persistedstate": "^3.2.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/tsconfig": "^0.4.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.10",
    "wireit": "^0.14.1"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:src"
      ]
    },
    "build:src": {
      "command": "vite build",
      "files": [
        "src/**/*"
      ],
      "output": [
        "docs/**/*"
      ],
      "dependencies": [
        "type-check"
      ]
    },
    "type-check": {
      "command": "vue-tsc --noEmit"
    },
    "preview": {
      "dependencies": [
        "preview:src"
      ]
    },
    "preview:src": {
      "command": "vite preview"
    },
    "dev": {
      "dependencies": [
        "dev:src"
      ]
    },
    "dev:src": {
      "command": "vite"
    }
  }
}
